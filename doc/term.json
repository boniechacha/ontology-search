{
  "settings": {
    "analysis": {
      "analyzer": {
        "term_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase",
            "term_ngram"
          ]
        }
      },
      "filter": {
        "term_ngram": {
          "type": "nGram",
          "min_gram": 2,
          "max_gram": 100
        }
      }
    }
  },
  "mappings": {
    "term": {
      "properties": {
        "namespace": {
          "type": "keyword"
        },
        "def": {
          "type": "text",
          "analyzer": "term_analyzer"
        },
        "name": {
          "type": "text",
          "analyzer": "term_analyzer"
        }
      }
    }
  }
}