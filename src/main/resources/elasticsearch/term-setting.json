{
  "analysis": {
    "analyzer": {
      "term_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "standard",
          "lowercase",
          "term_ngram"
        ]
      }
    },
    "filter": {
      "term_ngram": {
        "type": "nGram",
        "min_gram": 3,
        "max_gram": 100
      }
    }
  }
}
